  }
  
  .login-box h1 {
  margin: 0 0 30px;
  padding: 0;
  color:  	whitesmoke;
  text-align: center; 
  border-radius: 10px;  
  } 
  

  .login-box .user-box {
  position: relative;
  }
  
  .login-box .user-box input {
  width: 100%;
  padding: 10px 0;
  font-size: 16px;
  color: #fff;
  margin-bottom: 30px;
  border: none;
  border-bottom: 1px solid #fff;
  outline: none;
  background: transparent;
  }

   .login-box .user-box label {
  position: absolute;
  top:0;
  left: 0;
  padding: 10px 0;
  font-size: 16px;
  color: #fff;
  pointer-events: none;
  transition: .5s;
  }
  
  .login-box .user-box input:focus ~ label,
  .login-box .user-box input:valid ~ label {
  top: -20px;
  left: 0;
  color: whitesmoke;
  font-size: 12px;
  }
  
  .login-box form button {
  position: relative;
  display: inline-block;
  padding: 10px 20px;
