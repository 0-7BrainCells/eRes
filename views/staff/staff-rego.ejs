<body>
    <div class= "container">
       <h1 class= "mb-4">Create a new staff account</h1>
    <form action="/staff-register-received" method = "POST" >
      <div class="row g-3">
        
        <div class="col-md-4">
          <label for="validationDefaultUsername" class="form-label">ID</label>
          <div class="input-group">
            <input type="text" class="form-control" name = "ID" id="validationDefaultUsername"  aria-describedby="inputGroupPrepend2" required>
          </div>
        </div>

        <div class="col-md-4">
          <label for="validationDefaultPass" class="form-label">Password</label>
          <input type="text" class="form-control" name = "password" id="validationDefaultPass"  required>
        </div>

        <div class="col-12">
          <button class="btn btn-primary" type="submit">Add Account</button>
          <a href="/StaffManagement" class= "btn btn-light">Back</a>
        </div>

      </form>