<body>
  <!--THIS IS THE NAV PAN-->
  <ul>
    <img src="images/Le Bistrot d'Andre.png" style="vertical-align:middle;margin:0px 30px" alt="logo" width = "75" height = "75"/>
    <li><a href="/CustomerHomePage">Home</a></li>
    <li><a href="/LunchMenu">Lunch Menu</a></li>
    <li><a href="/DinnerMenu">Dinner Menu</a></li>
  </ul>
  <!---->
  
  <div class="HSpace"></div>
  <ul class="menu">
      <% for (var i = 0; i < items.length; i++) { %>
        <li class="menu-item">
          <section>
            <header>
              <h1><%=items[i].name %></h1>
              <span class="spacer"></span>
              <span class="price"><%=items[i].price %></span>
            </header>
            <p><%=items[i].description %></p>
            <div class="quan_addBtn">
              <div class= "addToOrderBtn">
                <a href= "LunchMenu" class="btn btn-info">Add To Order</a> 
              </div>
              <div class="quantity">
                <input type="number" id="quantity" name="quantity" class="form-control input-number" min="1" max="10">
              </div>
            </div>
            </section> 
        </li>
      <% } %>
    <ul>
  </div>
    
</body>

